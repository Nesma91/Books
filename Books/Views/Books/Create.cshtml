@model Books.ViewModels.BooksFormViewModel
@{
    ViewBag.Title = "Create";
}

<h3 class="text-primary">
    @(Model.Book.Id == 0 ? "Add New Book" : "Edit Book")
</h3>

<hr />

@using (Html.BeginForm("Save", "Books"))
{
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        @Html.LabelFor(b => b.Book.Title, new { @class = "form-label" })
        @Html.TextBoxFor(b => b.Book.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.Book.Title, null, new { @class = "text-danger" })
    </div>
    <div class="form-group mb-3">
        @Html.LabelFor(b => b.Book.Author, new { @class = "form-label" })
        @Html.TextBoxFor(b => b.Book.Author, new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.Book.Author, null, new { @class = "text-danger" })
    </div>
    <div class="form-group mb-3">
        @Html.LabelFor(b => b.Book.CategoryId, new { @class = "form-label" })
        @Html.DropDownListFor(b => b.Book.CategoryId, new SelectList(Model.Categories, "Id", "Name"), "Select Categeory", new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Book.CategoryId, null, new { @class = "text-danger" })
    </div>
    <div class="form-group mb-3">
        @Html.LabelFor(b => b.Book.Description, new { @class = "form-label" })
        @Html.TextAreaFor(b => b.Book.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.Book.Description, null, new { @class = "text-danger" })
    </div>
    @Html.HiddenFor(b => b.Book.Id)
    <button type="submit" class="btn btn-primary">Save</button>

}

@section Scripts
    {
        @Scripts.Render("~/bundles/jqueryval")
    }